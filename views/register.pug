doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/static/styles/general.css")
    link(rel="stylesheet", href="/static/styles/login&register.css")
    script(src="/static/js/scripts.js", defer="defer")
    script(src="/static/js/login&register.js", defer="defer") 
    script(src="/static/js/register.js", defer="defer") 
    title Register
  body 
    main.wrapper 
      div.form-wrapper.card 
        h1.title Register
        form.credentials(autocomplete="off") 
          input(type="text" id="username" name="username" required placeholder="Username")
          input(type="password" id="password" name="password" required placeholder="Password")
          input(type="password" id="confirmPassword" name="confirmPassword" required placeholder="Confirm password")
          div(id="error")
          div.show-password
            label(for="showPassword") Show password 
            input(type="checkbox" id="showPassword")
          div.buttons
            a(href="/login").link Log in
            button.button(id="register") REGISTER