doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/static/styles/index.css")
    link(rel="stylesheet", href="/static/styles/login.css")
    script(src="/static/js/scripts.js", defer="defer")
    script(src="/static/js/login&register.js", defer="defer") 
    script(src="/static/js/login.js", defer="defer") 
    title Log in
  body 
    main.wrapper
      div.form-wrapper 
        h1.title Log in
        form.credentials(autocomplete="off") 
          input(type="text" id="username" name="username" required placeholder="Username")
          input(type="password" id="password" name="password" required placeholder="Password")
          div(id="error")
          div.show-password
            label(for="showPassword") Show password 
            input(type="checkbox" id="showPassword")
          div.buttons 
            a(href="/register").link Register
            button.button(id="login") LOG IN
